{
  "name": "desktop-weather-app",
  "version": "1.0.0",
  "description": "Trying out a desktop weather application using JavaScript.",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "cd react-ui && npm run build",
    "start": "electron .",
    "dist": "npm run build && electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/natsudraggval/desktop-weather-app.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/natsudraggval/desktop-weather-app/issues"
  },
  "homepage": "https://github.com/natsudraggval/desktop-weather-app#readme",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.natsudraggval.weatherapp",
    "productName": "Weather-Buddy",
    "icon": "build/favicon.ico",
    "directories": {
      "output": "release"
    },
    "files": [
      "react-ui/dist/**/*",
      "electron/main.js",
      "package.json",
      "build/favicon.ico"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "forceCodeSigning": false
  }
}